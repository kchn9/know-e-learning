      <%= search_form_for(@q, class: "d-flex", role: "search") do |f| %>
        <%= f.search_field :title_or_description_cont_any, class: "form-control me-1", type:"search", placeholder:"Search for course...", aria_label: "Search"  %>
        <%= f.button nil, class: "btn btn-primary d-flex justify-content-center align-items-center" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search mx-1" viewBox="0 0 16 16">
