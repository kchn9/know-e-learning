                <hr class="dropdown-divider">
                <%= link_to "My courses", manage_path, class:"dropdown-item" %>
                <hr class="dropdown-divider">
                <%= link_to "Sign out", destroy_user_session_path, class: "dropdown-item" %>
              </ul>
            </li>
          </div>
        <% end %>
