<% if resource.errors.any? %>
  <% resource.errors.full_messages.each do |message| %>
    <div class="position-fixed m-2 sticky-bottom bottom-0 end-0 alert alert-warning alert-dismissible fade show" style="z-index: 200;" role="alert" >
      <strong>
        <%= message %>
      </strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>
