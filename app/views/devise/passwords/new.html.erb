<div class="container my-3">
  <h2 class="text-center display-6">Forgot your password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row mt-4 d-flex justify-content-center">
      <div class="col-10 col-xl-6">
        <div class="form-floating">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Please enter your email" %>
          <%= f.label :email %><br />
        </div>
      </div>
    </div>
    <div class="d-flex mx-auto justify-content-center">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary px-4" %>
    </div>
  <% end %>
  <div class="row my-2">
    <div class="col d-flex flex-row justify-content-center gap-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
