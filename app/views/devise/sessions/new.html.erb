<div class="container my-3">
  <h2 class="text-center display-6">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mt-4 d-flex justify-content-center">
      <div class="col-10 col-xl-6">
        <div class="form-floating">
          <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "Please enter your email" %>
          <%= f.label :login %><br />
        </div>
        <div class="form-floating">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Please enter your password" %>
          <%= f.label :password %><br />
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col d-flex align-items-center flex-column">
        <% if devise_mapping.rememberable? %>
          <div class="form-check my-2 pb-2 d-block">
            <%= f.check_box :remember_me,  class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>
        <div class="d-grid col-3 mx-auto">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-fluid" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row my-2">
    <div class="col d-flex flex-row justify-content-center gap-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
