<div class="container my-3">
  <h2 class="text-center display-6">Edit your profile</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row mt-4 d-flex justify-content-center">
      <div class="col-10 col-xl-6">
        <div class="form-floating mb-3">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "Please enter your username" %>
          <%= f.label :username %>
        </div>
        <div class="form-floating mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Please enter your email" %>
          <%= f.label :email %>
        </div>
        <div class="form-floating mb-3">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Please enter your password" %>
          <%= f.label :password, "Password (#{@minimum_password_length} characters minimum) " %>
        </div>
        <div class="form-floating mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Please confirm your password" %>
          <%= f.label :password_confirmation %>
        </div>
        <div class="form-floating mb-3">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Enter current password" %>
          <%= f.label :current_password %> <i style="font-size: 0.8rem; text-align: center;">(we need your current password to confirm your changes)</i><br />
        </div>
      </div>
    </div>
    <div class="d-grid col-3 mx-auto">
      <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
  <h3 class="text-center mt-4 mb-2">Cancel my account</h3>
  <div class="row mt-3">
    <p class="text-center">Unhappy?
      <%= link_to "Cancel my account", registration_path(resource_name), data: { 'turbo-method': :delete, 'turbo-confirm': "Are you sure?" }, class: "ms-2 btn btn-sm btn-outline-danger" %>
    </p>
  </div>
  <div class="row my-2">
    <div class="col d-flex flex-row justify-content-center">
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
