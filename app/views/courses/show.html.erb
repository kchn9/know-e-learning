<div class="container pt-4">
  <h2 class="display-6 text-center"><%= @course.title %></h2>
  <figcaption class="blockquote-footer">
    <%= @course.user.username %>
  </figcaption>
  <p><small> <%= @course.is_free ? "for free" : "paid course" %> </small></p>
  <p class="lead"><%= @course.description %></p>
  <div class="show-actions btn-group">
      <%= link_to "Back to course list", courses_path, class: "btn btn-primary" %>
      <%= link_to "Edit", edit_course_path(@course), class: "btn btn-secondary" %>
      <%= link_to "Delete", @course, class: "btn btn-danger", data: { turbo_method: :delete } %>
  </div>
</div>
