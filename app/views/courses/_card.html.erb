<%= link_to course_path(course), class: "card clickable-card" do %>
  <div class="row g-0">
    <div class="col-md-4">
      <img src="https://picsum.photos/400/300" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= course.title %></h5>
        <p class="card-text"><%= course.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= course.is_free ? "Free" : "Paid" %></small>
        </p>
      </div>
    </div>
  </div>
<% end %>
