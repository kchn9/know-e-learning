<div class="container py-4">
  <h4 class="subheader text-center"><span class="text-muted">Preview of</span></h4>
  <h2 class="display-6 text-center"><%= @course.title %></h2>
  <div class="d-flex justify-content-center my-1">
    <span class="badge bg-dark">
      <%= @course.is_free ? "Free" : "Paid" %>
    </span>
  </div>
  <figcaption class="text-center mb-3">
    Created and published by <%= @course.author.username %>
  </figcaption>
  <% if @course.recording.attached? %>
    <div class="ratio ratio-16x9 preview-photo">
      <h5 class="preview-info">That's video thumbnail - to watch course enroll it <%= link_to "here", enroll_path(@course) %></h5>
      <%= image_tag url_for(@course.recording.preview(resize_to_limit: [854, 480]).processed), alt:"Course thumbnail" %>
    </div>
  <% end %>
  <div class="row my-2">
    <div class="col-1"></div>
    <div class="col-10">
      <p class="lead py-2 my-2">
        <strong class="">Author description:</strong>
        <%= @course.description %>
      </p>
    </div>
    <div class="show-actions btn-group d-flex">
      <%= link_to "Back to course list", courses_path, class: "btn btn-primary" %>
    </div>
    <div class="col-1"></div>
  </div>
</div>
